/* pages/index/index.wxss */
page{
  width:100%;
  height:100%;
}

.image {
  position: absolute;
  top: 0rpx;
  width: 100%;
  height: 100%;
  padding: 0%;
  margin: 0%;
  opacity: 0.5;
}

.page-section-time{
  margin-top: 50rpx;
  margin-left: 50rpx;
  text-align: left;
  font-size: 60rpx;
  line-height:1.4;
  opacity:0.99;
}

.page-section-button{
  margin-top: 100rpx;
  margin-left: 50rpx;
  height: 50rpx;
  text-align: left;
  font-size: 40rpx;
  line-height:1.4;
}

.page-section-icon1{
  position: absolute;
  top: 300rpx;
  left: 50rpx;
  opacity:1;
}

.page-section-icon2{
  position: absolute;
  top: 300rpx;
  left: 300rpx;
  opacity:1;
}

.page-section-icon3{
  position: absolute;
  top: 300rpx;
  left: 550rpx;
  opacity:1;
}

.icon {
  height: 150rpx;
  width: 150rpx;
  opacity: 1;
}
.icon-text {
  width: 150rpx;
  text-align: center;
  opacity: 1;
}

